<div id='{{box_id}}' class='modal fade'>
   <div class='modal-header'>
      <button type='button' class='close' data-dismiss='modal' aria-hidden='true'>&times;</button>
      <h4 class='modal-title'>Accept User</h4>
   </div>
   <div class='modal-body'>
      <div class='dialog-alert'>
      </div>
      <h4>Are you sure you want to Active the user </h4>
      <h4>{{confirm_message}}<br><small>This action cannot be undone.</small></h4>
      <br> 
      {% if target_user.email %}
      <div class="col-sm-12 user-units">
         <strong>
         <span class="glyphicon glyphicon-home text-primary"></span> 
         Unit 
         <br>  
      
         </strong>
         <div class="unit-modal-wrapper">
            <table class="modal-unit-table table table-condensed">
               <thead>
                  <tr>
                     <th>Neighborhood</th>
                     <th>Rawabi Code</th>
                     <th>Tabu Code</th>
                  </tr>
               </thead>
              {% for key, value in user_units %}
               <tbody>
                  <td>
                     <div class="text">
                        {{value.neighborhood}}
                     </div>
                  </td>
                  <td>
                     <div class="text">
                        {{value.rawabicode}}
                     </div>
                  </td>
                  <td>
                     <div class="text">
                        {{value.topocode}}
                     </div>
                  </td>
             
               </tbody>
                {% endfor %}
            </table>
         </div>
      </div>
      <br>
      <br>

      {% endif %}
      <div class='btn-group-action'>
         <button type='button' class='btn btn-success btn-lg btn-block js-confirm'>Send Activation Email</button>
          <button type='button' class='btn btn-danger btn-lg btn-block js-regret'>Send Regret Email</button>
         <button type='button' class='btn btn-default btn-lg btn-block' data-dismiss='modal'>Cancel</button>
      </div>
   </div>
</div>